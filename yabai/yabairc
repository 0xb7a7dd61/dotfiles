# ~/.config/yabai/yabairc 

lower_monitor_left_padding='if [[ $(yabai -m query --displays --display $(yabai -m query --spaces --space 7 | jq ".display") | jq ".label") == "\"lower\"" ]]; then yabai -m space 7 --padding abs:0:0:195:0; fi'
# event hook for enabling the dock injection for spaces management
# must be before --load-sa
yabai -m signal --add event=dock_did_restart action="sudo yabai --load-sa"
sudo yabai --load-sa

yabai -m config                               \
    window_placement          second_child    \
    window_gap                10              \
    top_padding               10              \
    bottom_padding            10              \
    right_padding             10              \
    left_padding              10              \
    layout                    bsp             \
    mouse_follows_focus       on              \
    mouse_modifier            alt             \
    mouse_action1             move            \
    mouse_action2             resize          \
    mouse_drop_action         swap

yabai -m display 2 --label lower

yabai -m space 1 --label terminal
yabai -m space 2 --label slack
yabai -m space 3 --label obsidian
yabai -m space 4 --label tg-browser
yabai -m space 5 --label spotify
yabai -m space 6 --label rabbi-email
yabai -m space 7 --label lower_monitor
yabai -m space 9 --label mb-msgs

eval "$lower_monitor_left_padding"

