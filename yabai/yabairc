# ~/.config/yabai/yabairc 

lower_monitor_left_padding='if [[ $(yabai -m query --displays --display $(yabai -m query --spaces --space 8 | jq ".display") | jq ".uuid") == "\"83EC60B3-B5B3-47F5-89E1-38A4B46AE204\"" ]]; then yabai -m space 8 --padding abs:0:0:195:0; fi'
laptop_left_padding='if [[ $(yabai -m query --displays --display $(yabai -m query --spaces --space 7 | jq ".display") | jq ".uuid") == "\"37D8832A-2D66-02CA-B9F7-8F30A301B230\"" ]]; then yabai -m space 7 --padding abs:0:0:355:0; fi'
set_padding="${laptop_left_padding[@]} && ${lower_monitor_left_padding[@]}"
# event hook for enabling the dock injection for spaces management
# must be before --load-sa
yabai -m signal --add event=dock_did_restart action="sudo yabai --load-sa"
sudo yabai --load-sa

yabai -m config                               \
    window_placement          second_child    \
    window_gap                10              \
    top_padding               10              \
    bottom_padding            10              \
    right_padding             10              \
    left_padding              10              \
    layout                    bsp             \
    mouse_follows_focus       on              \
    mouse_modifier            alt             \
    mouse_action1             move            \
    mouse_action2             resize          \
    mouse_drop_action         swap

yabai -m display 2 --label lower

yabai -m space 1 --label terminal
yabai -m space 2 --label slack
yabai -m space 3 --label obsidian
yabai -m space 4 --label tg-browser
yabai -m space 5 --label spotify
yabai -m space 6 --label rabbi-email
yabai -m space 7 --label mb-msgs
yabai -m space 8 --label lower_monitor

eval "$set_padding"

